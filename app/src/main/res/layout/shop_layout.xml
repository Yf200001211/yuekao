<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/shop_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-57dp" />

    <ImageView
        android:id="@+id/imageshop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingLeft="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp" />
    <TextView
        android:id="@+id/titleshop"
        android:lines="3"
        android:singleLine="true"
        android:text="ajajjajaj"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/imageshop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/priceshop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageshop"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/imageshop"
        android:text="hahahha"
        android:textColor="@color/colorAccent"
        android:textSize="25sp" />

    <com.example.yuekao.view.CustomAddView
        android:id="@+id/addview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/priceshop"
        android:layout_alignParentTop="true"
        android:layout_marginTop="57dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="50dp"></com.example.yuekao.view.CustomAddView>

</RelativeLayout>
